generator client {
  provider = "prisma-client-js"
}


datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  role      String   @default("student")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  studentRequests TutorRequest[] @relation("StudentRequests")
  tutorRequests   TutorRequest[] @relation("TutorRequests")
}


model TutorRequest {
  id          Int      @id @default(autoincrement())
  studentId   Int
  tutorId     Int?
  subject     String
  description String?
  status      String   @default("pending")
  createdAt   DateTime @default(now())

  // Relationships
  student User @relation("StudentRequests", fields: [studentId], references: [id])
  tutor   User? @relation("TutorRequests", fields: [tutorId], references: [id])
}
